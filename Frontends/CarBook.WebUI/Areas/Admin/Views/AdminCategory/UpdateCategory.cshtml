@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hakkımda Bilgisi Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Hakkımda ile ilgili bilgilreri aşağıdaki kutucuklardan güncelleyebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">


                            <div class="form-group">
                                <input type="hidden" asp-for="CategoryId" />

                                <label for="exampleInputName">Kategori İsim</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="İsmi Giriniz">
                            </div>

                           >


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncel kategori Billgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



