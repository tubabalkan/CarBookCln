@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Kategori Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Hakkımda alanına veri girişini aşağıdan yapabilirsiniz. Tasarımda bozulma olmaması adına yeni bir hakkımda girişi yaptıktan sonra önceki banner alanını silin, sadece 1 tane banner verisi kalacak şekilde verileri kaydedin.

                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Kategori İsmi</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="İsim Giriniz">
                            </div>
                           
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kategori Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






