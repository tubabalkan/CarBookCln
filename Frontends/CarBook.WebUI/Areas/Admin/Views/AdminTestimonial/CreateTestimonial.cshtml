@model CreateTestimonialDto

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Referans Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            referanssssssss
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName"> Name</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Referans İsim Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription"> Yorum</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Comment" placeholder="Yorum Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription"> Başlık</label>

                                <textarea rows="5" class="form-control" asp-for="Title" placeholder="Başlık  Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl"> Görsel Url</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Görsel Url Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





