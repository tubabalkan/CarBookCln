@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}





<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmet Bilgisi Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Hakkımda ile ilgili bilgilreri aşağıdaki kutucuklardan güncelleyebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">


                            <div class="form-group">
                                <input type="hidden" asp-for="ServiceId" />

                                <label for="exampleInputName"> İsim</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Title" placeholder="İsmi Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription"> Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" placeholder="Açıklamayı  Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl"> Icon Url</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="IconUrl" placeholder="Görsel Url Giriniz">
                            </div>


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncel Hizmet Billgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



