@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Hizmet Bilgisi Giriş Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Yeni Hizmet Ekleme Sayfası: Buradan, sunduğunuz yeni hizmetleri ekleyebilirsiniz. Yeni hizmet eklerken, hizmetin başlığını, açıklamasını ve uygun bir ikon seçmeyi unutmayın.
                            Böylece hizmetlerinizi kolayca tanıtabilir ve kullanıcıların ilgisini çekebilirsiniz. Hizmet ekleme işlemini tamamladıktan sonra, bu hizmeti ana sayfanızda görüntüleyebilirsiniz.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName"> Name</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Title" placeholder="İsim Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription"> Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" placeholder="Açıklamayı  Giriniz"></textarea>

                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl"> Ikon Url</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="IconUrl" placeholder="Görsel Url Giriniz">
                            </div>
                            <button type="submit"
                                    class="btn btn-primary btn-sm d-flex align-items-center justify-content-center"
                                    style="border-radius: 12px; padding: 8px 16px; transition: 0.3s;">
                                <i class="fas fa-save me-2"></i> Hizmet Bilgisini Kaydet
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






