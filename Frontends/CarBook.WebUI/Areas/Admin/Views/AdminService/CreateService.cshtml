@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}






<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Hizmet Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Hizmetttt
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName"> Name</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Title" placeholder="İsim Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription"> Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" placeholder="Açıklamayı  Giriniz"></textarea>

                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl"> Ikon Url</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="IconUrl" placeholder="Görsel Url Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Servis Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






