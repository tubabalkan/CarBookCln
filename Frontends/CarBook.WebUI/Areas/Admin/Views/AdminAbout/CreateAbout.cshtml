@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Hakkımda Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Hakkımda alanına veri girişini aşağıdan yapabilirsiniz. Tasarımda bozulma olmaması adına yeni bir hakkımda girişi yaptıktan sonra önceki banner alanını silin, sadece 1 tane banner verisi kalacak şekilde verileri kaydedin.

                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle"> Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription"> Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" placeholder="Açıklamayı  Giriniz"></textarea>
                               
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl"> Görsel Url</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Görsel Url Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımda Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


