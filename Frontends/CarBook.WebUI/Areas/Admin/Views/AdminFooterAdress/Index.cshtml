@model List<ResultFooterAddressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa - Footer Alanı Bilgilendirmesi</h4>
                        <p class="card-subtitle mb-4">
                            Bu alandan site altbilgisinde (footer) görüntülenen bilgileri düzenleyebilirsiniz.
                            Açıklama, adres, telefon numarası ve mail adresi gibi iletişim ve tanıtım bilgilerini buradan güncelleyebilir veya silebilirsiniz.
                            Yapılan güncellemeler doğrudan sitenin alt bölümünde ziyaretçilere yansıtılacaktır. Lütfen bilgileri eksiksiz ve doğru bir şekilde giriniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>

                                        <th>#</th>
                                        <th>Açıklama</th>
                                        <th>Adress</th>
                                        <th>Telefon Numarası</th>
                                        <th>Mail Adresi </th>
                                        <th>Sil</th>
                                        <th>Güncelle </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th>@count</th>
                                            <th>@item.Description</th>
                                            <th>@item.Address</th>
                                            <th>@item.PhoneNumber</th>
                                            <th>@item.Email</th>


                                            <td>
                                                <a href="/Admin/AdminFooterAdress/RemoveFooterAdress/@item.FooterAddressId"
                                                   class="btn btn-danger btn-sm d-flex align-items-center justify-content-center"
                                                   style="border-radius: 12px; padding: 8px 16px; transition: 0.3s;">
                                                    <i class="fas fa-trash-alt me-2"></i> Sil
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminFooterAdress/UpdateFooterAdress/@item.FooterAddressId"
                                                   class="btn btn-success btn-sm d-flex align-items-center justify-content-center"
                                                   style="border-radius: 12px; padding: 8px 16px; transition: 0.3s;">
                                                    <i class="fas fa-edit me-2"></i> Güncelle
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                           
                            <td>
                                <a href="/Admin/AdminFooterAdress/CreateFooterAdress/" class="btn btn-primary btn-sm" style="border-radius: 8px; padding: 6px 12px;">
                                    <i class="fas fa-plus-circle"></i> Yeni Footer Bilgisi Girişi
                                </a>
                            </td>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




