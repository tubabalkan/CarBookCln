@model UpdateFooterAdressDto

@{
    ViewData["Title"] = "UpdateFooterAdress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Footer Bilgisi Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Bu sayfa üzerinden mevcut footer bilgilerinizi güncelleyebilirsiniz.
                            Adres, açıklama, telefon numarası ve e-posta gibi alanlarda değişiklik yaparak, kullanıcılarınıza daha doğru ve güncel iletişim bilgileri sunabilirsiniz.
                            Güncelleme işlemini tamamladıktan sonra kaydet butonuna basmayı unutmayınız.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="FooterAddressId" />
                                <label for="exampleInputName"> Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Description" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription"> Adress</label>
                                <textarea rows="5" class="form-control" asp-for="Address" placeholder="Adres Bilgisi Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl"> Telefon Numarası</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="PhoneNumber" placeholder="Telefon Numarasını Giriniz">
                            </div><div class="form-group">
                                <label for="exampleInputImageUrl">Mail Adresi</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="Email" placeholder="Mail Adresini Giriniz">
                            </div>
                           
                            <button type="submit"
                                    class="btn btn-primary btn-sm d-flex align-items-center justify-content-center"
                                    style="border-radius: 12px; padding: 8px 16px; transition: 0.3s;">
                                <i class="fas fa-save me-2"></i> Güncel Footer Billgisini Kaydet
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


