@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum Listesi - BlogId: @ViewBag.v</h4>
                        <p class="card-subtitle mb-4">
                            Bloglarla ilgili o bloga yapılmış olan yorum listesini bu sayfadan görebilirsiniz. İlgili yorumları kaldırabilir ya da tekrar aktif hale getirebilirsiniz. 
                            Bunun için Yorumlrın altında yer alan butonları kullanabilirsiniz.</p>
                        @foreach(var item in Model)
                        {
                          
                            count++;
                            <div class="col-md-12">
                                <div class="card">
                                    <h5 class="card-header">Yorum - @count</h5>
                                    <div class="card-body">
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text">
                                            @item.Description
                                        </p>
                                        <button type="submit"
                                                class="btn btn-danger btn-sm d-flex align-items-center justify-content-center"
                                                style="border-radius: 12px; padding: 6px 12px; transition: 0.3s;">
                                            <i class="fas fa-trash-alt me-2"></i> Yorumu Kaldır
                                        </button>

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




