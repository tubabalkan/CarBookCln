@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Banner Bilgisi Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Banner ile ilgili bilgilreri aşağıdaki kutucuklardan güncelleyebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">


                            <div class="form-group">
                                <input type="hidden" asp-for="BannerId" />

                                <label for="exampleInputTitle"> Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı Giriniz">
                            </div>
                           
                            <div class="form-group">
                                <label for="exampleInputDescription"> Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" placeholder="Açıklamayı  Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoUrl"> Video Url</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Video Url Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoDescription"> Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder="Video Açıklamasını Giriniz">
                            </div>

                            <button type="submit"
                                    class="btn btn-primary btn-sm d-flex align-items-center justify-content-center"
                                    style="border-radius: 12px; padding: 8px 16px; transition: 0.3s;">
                                <i class="fas fa-save me-2"></i> Güncel Bannerı Kaydet
                            </button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
